#!/bin/bash

PROG="./toy_mc.exe"
ODIR="."

######################## DATA ########################
# SEEDS="2330 2331 2332 2333 2334 2335 2336 2337 2338 2339"
SEEDS="2340 2341 2342 2343 2344 2345 2346 2347 2348 2349"
#
printf "${SEEDS}" | \
    xargs --delimiter=" " --max-procs=4 -I{} \
      sh -c "${PROG} -n 250 -s {} \
            -h ${ODIR}/toymc_{}.root \
            > ${ODIR}/toymc_{}.out 2>&1"

